// p. s. attributes
particle_system smoke { 
	renderer billboard
	billboard_type point
	particle_width 10
	particle_height 10
	quota 500
	material smokeMaterial

	// e. attributes
	emitter Point { 
		direction 0 1 0	
		angle 1
		emission_rate 15
		time_to_live 10
		velocity_min 10
		velocity_max 20
	}

	// a. attributes
	affector ColourImage { 
		image smokecolors.png
	}

	sorted false
}