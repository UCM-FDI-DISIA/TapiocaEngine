compositor SSAO/Post/Modulate
{
    technique 
    {
		texture ssao target_width target_height PF_BYTE_RGBA chain_scope
        
	    target ssao
        {
            input previous
        }
		
		target_output
        {
            input none
            
            pass render_quad
            {
                material SSAO/Post/Modulate
            }
        }
    }
}

